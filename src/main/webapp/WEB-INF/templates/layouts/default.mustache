<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
{{#html}}
<head>
    {{#head}}
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    {{title}}
    <!-- Bootstrap theme -->
    <link href="{{context.getContextPath()}}/assets/bootstrap.min.css" media="all" rel="stylesheet" type="text/css">
    <!-- JQuery (not required) -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <link href="{{context.getContextPath()}}/assets/yuzu.css" media="all" rel="stylesheet" type="text/css">
    <script>
    function flagFallBack(tag) {
        if(tag.src.indexOf("und.gif", tag.src.length - 7) === -1) {
            tag.src='{{context.getContextPath()}}/assets/flag/und.gif';
            tag.parentNode.appendChild(document.createTextNode('{{lang}}'));
        }
    }
    </script>
    <link rel="shortcut icon" href="{{context.getContextPath()}}/favicon.ico" />
    {{/head}}
</head>
<body style="padding-top:100px;">

<html>
    <head>
        <title>Listing resources</title>
    </head>
    <body>
        <h1>Index</h1>
        <div class="row">
            <div class="col-lg-2">
                <h4>List by:</h4>
                <div class="list-group">
                    {{#facets}}
                    <a href='{{context.getContextPath()}}/list/?prop={{uri_enc}}' class="list-group-item active rdf_link">{{label}}</a>
                    {{#values?}}
                        <div class="list-group">
                    {{/values?}}
                        {{#values}}
                        <a href='{{context.getContextPath()}}/list?prop={{prop_uri}}%26obj={{value_enc}}%26obj_offset={{offset}}' class="list-group-item" style="word-wrap:break-word;">{{value}} ({{count}})</a>
                        {{/values}}
                        {{#more_values}}
                        <a href='{{context.getContextPath()}}/list/?prop={{uri_enc}}%26obj_offset={{more_values}}' class="list-group-item">More values...</a>
                        {{/more_values}}
                        {{#values?}}
                        </div>
                    {{/values?}}
                    {{/facets}}
                </div>
            </div>
            <div class="col-lg-10">
                    {{#results}}
                        <div class="panel panel-default">
                        <div class="panel-heading"><a href="{{link}}" class="rdf_link">{{title}}</a></div>
                        <table class="panel-body rdf_embedded_table">
                            {{#model}}
                                {{#triples}}
                                    <tr>
                                        <td class="rdf_prop">
                                            {{#prop}}
                                            <a href="{{uri}}" class="rdf_link">{{display}}</a>
                                            {{/prop}}
                                        </td>
                                        <td class="rdf_value rdf_first_value">
                                        {{#obj}}{{#elem}}
                        {{#literal}}
                            <span property="{{#prop}}{{uri}}{{/prop}}" {{#lang}}xml:lang="{{lang}}"{{/lang}}
                             {{#datatype}}datatype="{{uri}}"{{/datatype}}>{{display}}</span>
                            {{#lang}}
                                <span class="pull-right"><img src="{{context.getContextPath()}}/assets/flag/{{lang}}.gif" onError="flagFallBack(this)"/></span>
                            {{/lang}}
                            {{#datatype}}
                                <span class="pull-right rdf_datatype"><a href="{{uri}}" class="rdf_link">{{display}}</a></span>
                            {{/datatype}}
                        {{/literal}}
                        {{^literal}}
                            {{#bnode}}
                                <i>Anonymous Node</i>
                            {{/bnode}}
                            {{^bnode}}
                                <a href="{{uri}}" property="{{#prop}}{{uri}}{{/prop}}" class="rdf_link">{{display}}</a>
                            {{/bnode}}
                        {{/literal}}
                        {{/elem}}
                            {{^last}}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td class="rdf_value rdf_rest_value">

                            {{/last}}
                        {{/obj}}
                                        </td>
                                    </tr>
                                {{/triples}}
                            {{/model}}
                        </table>
                    </div>
                    {{/results}}
            </div>
        </div>
        <div class="row" style="padding-top:50px;">
            <div class="btn-group pull-right">
                <a href='{{context.getContextPath()}}/list/?offset={{prev}}{{query}}' class='btn btn-default {{has_prev}}'>&lt;&lt;</a>
                <a href='#' class='btn btn-default'>{{pages}}</a>
                <a href='{{context.getContextPath()}}/list/?offset={{next}}{{query}}' class='btn btn-default {{has_next}}'>&gt;&gt;</a>
            </div>
        </div>
    </body>
</html>

<html>
    <head>
        <title>{{title}}</title>
    </head>
    <body>
    {{#is_test}}
    <div class="container">
        <div class="row">
            <div class="alert alert-danger">
                <h3 style="margin-top:5px;">This is a Test Instance</h3>
                <p>The URL used to access this instance does not correspond to the configuration.</p>
            </div>
        </div>
    </div>
    {{/is_test}}
         <div style="background-image:url('{{context.getContextPath()}}/assets/yuzu.jpg');overflow:hidden;background-size:100%;padding:30px;width:100%;height:300px;float:left;opacity:0.5;margin-bottom:2em;">
        </div>
        <div style="position:absolute;clear:both;padding-left:20%;">
            <div class="container">
                <h1 style="color:#000;font-size:7vmin;"><b>Simple, light-weight linked data hosting</b></h1>
                <p><a class="btn btn-info btn-lg pull-right" href="{{context}}/list/">Browse</a></p>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3">
                    <form action="{{context}}/search/" method="get">
                        <fieldset>
                            <legend>Search</legend>
                            <div class="form-group">
                                <label for="property" class="control-label">Property</label><br/>
                                <select name="property" id="property" class="form-control">
                                    <option value=''>Search all properties</option>
                                    {{#property_facets}}
                                    <option value='{{uri}}'>{{label}}</option>
                                    {{/property_facets}}
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="query" class="control-label">Query</label><br/>
                                <div>
                                    <input type="text" class="form-control" id="query" name="query"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="pull-right">
                                    <button type="submit" class="btn btn-success">Search</button>
                                    <a class="btn btn-default" href="{{context}}/sparql/">Advanced Search</a>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>

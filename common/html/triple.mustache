<tr>
    <td class="rdf_prop">
        {{#prop}}
            <a href="{{uri}}">{{display}}</a>
        {{/prop}}
    </td>
    <td class="rdf_value rdf_first_value">
        {{#obj}}
            {{#elem}}
            {{#has_triples}}
                <span property="{{#prop}}{{uri}}{{/prop}}">
                <table class="rdf_table_nested" resource="{{uri}}">
                {{#triples}}
                    {{> triple}}
                {{/triples}}
                </table>
                </span>
            {{/has_triples}}
            {{^has_triples}}
                {{#literal}}
                    <span property="{{#prop}}{{uri}}{{/prop}}" {{#lang}}xml:lang="{{lang}}"{{/lang}}
                     {{#datatype}}datatype="{{uri}}"{{/datatype}}>{{display}}</span>
                    {{#lang}}
                        <span class="pull-right"><img src="{{context}}/assets/flag/{{lang}}.gif"/></span>
                    {{/lang}}
                    {{#datatype}}
                        <span class="pull-right rdf_datatype"><a href="{{uri}}">{{display}}</a></span>
                    {{/datatype}}
                {{/literal}}
                {{^literal}}
                    {{#bnode}}
                        <i>Anonymous Node</i>
                    {{/bnode}}
                    {{^bnode}}
                        <a href="{{uri}}" property="{{#prop}}{{uri}}{{/prop}}">{{display}}</a>
                    {{/bnode}}
                {{/literal}}
            {{/has_triples}}
            {{/elem}}
            {{^last}}
    </td>
</tr>
<tr>
    <td></td>
    <td class="rdf_value rdf_rest_value">
            {{/last}}
        {{/obj}}
    </td>
</tr>
